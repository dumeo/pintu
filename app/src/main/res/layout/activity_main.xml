<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#CDDC39"
    >
    <TextView
        android:id="@+id/timeView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:textColor="#DA0C0C"
        android:gravity="center"
        android:layout_marginBottom="5dp"></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="#FFEB3B">

        </ImageView>

        <ImageView
            android:id="@+id/iv2"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/iv1"
            android:background="#FFEB3B"
            >

        </ImageView>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"

            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_toRightOf="@+id/iv2"
            android:background="#FFEB3B">

        </ImageView>

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iv1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="#FFEB3B">

        </ImageView>

        <ImageView
            android:id="@+id/iv5"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/iv4"
            android:layout_below="@+id/iv2"
            android:background="#FFEB3B"
            >

        </ImageView>

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iv3"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_toRightOf="@+id/iv2"
            android:background="#FFEB3B">

        </ImageView>

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iv4"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="#FFEB3B">

        </ImageView>

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iv5"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_toRightOf="@+id/iv7"
            android:background="#FFEB3B">

        </ImageView>

        <ImageView
            android:id="@+id/iv9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iv6"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_toRightOf="@+id/iv8"
            android:background="#FFEB3B">

        </ImageView>

        <ImageView
            android:id="@+id/iv10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iv6"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_toRightOf="@+id/iv9"
            android:background="#FFEB3B"></ImageView>
    </RelativeLayout>


    <ImageView
        android:id="@+id/selectedImage"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"></ImageView>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/selectButton"
            android:layout_marginTop="3dp"
            android:layout_width="120dp"
            android:textSize="20sp"
            android:text="选择图片"
            android:background="@drawable/bt_backgroud"
            android:layout_height="match_parent"></Button>


        <Button
            android:id="@+id/start_bt"
            android:layout_marginTop="3dp"
            android:layout_width="90dp"
            android:textSize="20sp"
            android:text="开始"
            android:background="@drawable/bt_backgroud"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent">

        </Button>

        <Button
            android:layout_width="80dp"
            android:layout_marginTop="3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:text="结束"
            android:background="@drawable/bt_backgroud"
            android:id="@+id/endGame">

        </Button>
    </LinearLayout>
    <Button
        android:id="@+id/maske_succed"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="一键还原"
        android:background="@drawable/bt_backgroud"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </Button>




</LinearLayout>